<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">


    <description>ATLAS-JPS-Mappings</description>

    <package>be.knoware.atlas.domain.party</package>
    <entity class="Party" name="Party">
        <table name="PartyTable"/>
        <attributes>
            <id name="id">
                <column name="PARTY_ID"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="type">
                <column name="PARTY_TYPE"/>
            </basic>
            <basic name="denomination">
                <column name="PARTY_DENOMINATION" length="100"/>
            </basic>
            <basic name="startDate">
                <column name="PARTY_START_DATE"/>
                <temporal>DATE</temporal>
            </basic>
            <basic name="endDate">
                <column name="PARTY_END_DATE"/>
                <temporal>DATE</temporal>
            </basic>
            <one-to-one name="address">
                <join-column name="ADDRESS_ID"/>
            </one-to-one>
        </attributes>
    </entity>
    <entity class="Address" name="Address">
        <table name="AddressTable"/>
        <attributes>
            <id name="id">
                <column name="ADDRESS_ID"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="street">
                <column name="ADDRESS_STREET"/>
            </basic>
            <basic name="zip">
                <column name="ADDRESS_ZIP"/>
            </basic>
            <basic name="houseNumber">
                <column name="ADDRESS_HOUSE_NUMBER"/>
            </basic>
            <basic name="city">
                <column name="ADDRESS_CITY"/>
            </basic>
        </attributes>


    </entity>
</entity-mappings>